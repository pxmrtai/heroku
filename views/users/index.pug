extends ../layouts/common

block content        
        h1 
            span.mr-3 Users
            a.btn.btn-primary(href='/users/create', style="text-align:center") new users
        .d-flex.aligt-item-center

            form.ml-auto(action="/users/search",method="GET" class="d-flex")
                input(type="text", name='name', class="form-control",value=searchOptions)
                button(class="btn btn-primary ml-2") Search
        table.table
            tr
                th Avatar
                th Name
                th Phone
                th Action
            each user in users
                tr
                    td
                        img(src=user.avatar, width=64)
                    td= user.name
                    td= user.phone
                    td
                        a.btn.btn-light(href="/users/" + user.id)  view
            